#!/usr/bin/env ruby

$LOAD_PATH << File.dirname(__FILE__) + "/../lib"
require 'govuk_content_schemas/schema_combiner'
require 'json-schema'
require 'json'

def usage
  $stderr.puts "USAGE: #{File.basename(__FILE__)} <path/to/combined-output-schema.json> *<path/to/schema>"
end

def report_errors(path, errors)
  $stderr.puts "There were errors when reading '#{path}:"
  errors.each do |error|
    $stderr.puts error
  end
end

def format_name(path)
  path.dirname.dirname.basename.to_s
end

if ARGV.count < 2
  usage
  exit(1)
end

output_path = Pathname.new(ARGV[0])

reader = JSON::Schema::Reader.new(accept_file: true, accept_uri: false)
schemas = {}
schema_filenames = ARGV[1, ARGV.size - 1]
schema_filenames.each do |f|
  path = Pathname.new(f)
  name = path.basename(".json").to_s

  if path.exist?
    schema = reader.read(path)
    errors =  JSON::Validator.fully_validate_schema(schema.schema, parse_data: false)
    if errors.any?
      report_errors(path, errors)
      exit(1)
    end

    schemas[name.to_sym] = schema
  end
end

combiner = GovukContentSchemas::SchemaCombiner.new(
  schemas,
  format_name(output_path)
)

FileUtils.mkdir_p(output_path.dirname)

File.open(output_path, 'w') do |file|
  file.write JSON.pretty_generate(combiner.combined.schema)
end
