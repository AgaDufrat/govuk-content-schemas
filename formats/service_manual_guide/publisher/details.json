{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "body",
    "publisher"
  ],
  "properties": {
    "body": {
      "type": "string"
    },
    "publisher": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "href": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "related_discussion": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "href": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
