{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "title",
      "base_path",
      "locale"
    ],
    "properties": {
      "title": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "base_path": {
        "$ref" : "#/definitions/absolute_path"
      },
      "api_url": {
        "type": "string",
        "format": "uri"
      },
      "web_url": {
        "type": "string",
        "format": "uri"
      },
      "locale": {
        "type": "string"
      }
    }
  }
}
