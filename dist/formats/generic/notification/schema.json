    "route": {
      "additionalProperties": false,
      "properties": {
        "path": {
          "type": "string"
        },
        "type": {
          "enum": [
            "prefix",
            "exact"
          ]
        }
      },
      "required": [
        "path",
        "type"
      ],
      "type": "object"
    },
    "withdrawn_notice": {
      "additionalProperties": false,
      "properties": {
        "explanation": {
          "type": "string"
        },
        "withdrawn_at": {
          "format": "date-time"
        }
      },
      "type": "object"
    },
