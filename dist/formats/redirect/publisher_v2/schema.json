{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "properties": {
        "base_path": {
          "$ref": "#/definitions/absolute_path"
        },
        "content_id": {
          "$ref": "#/definitions/guid"
        },
        "format": {
          "enum": [ "redirect" ]
        },
        "publishing_app": {
          "$ref": "#/definitions/publishing_app"
        },
        "update_type": {
          "enum": [ "major", "minor", "republish" ]
        },
        "public_updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "redirects": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/redirect_route"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "format",
        "publishing_app",
        "redirects",
        "base_path"
      ]
    },
    {
      "properties": {
        "base_path": {
          "$ref": "#/definitions/absolute_path"
        },
        "content_id": {
          "$ref": "#/definitions/guid"
        },
        "document_type": {
          "type": "string",
          "enum": [ "redirect" ]
        },
        "schema_name": {
          "type": "string",
          "enum": [ "redirect" ]
        },
        "publishing_app": {
          "$ref": "#/definitions/publishing_app"
        },
        "update_type": {
          "enum": [ "major", "minor", "republish" ]
        },
        "public_updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "redirects": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/redirect_route"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "document_type",
        "schema_name",
        "publishing_app",
        "redirects",
        "base_path"
      ]
    }
  ],
  "definitions": {
    "absolute_path": {
      "type": "string",
      "pattern": "^/(([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})+(/([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})*)*)?$",
      "description": "A path only. Query string and/or fragment are not allowed."
    },
    "absolute_fullpath": {
      "type": "string",
      "pattern": "^/(([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})+(/([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})*)*)?(\\?([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})*)?(#([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})*)?$",
      "description": "A path with optional query string and/or fragment."
    },
    "govuk_campaign_url": {
      "type": "string",
      "pattern": "^https://([a-zA-Z0-9]([a-zA-Z0-9-]{0,61}[A-Za-z0-9])?\\.)+campaign\\.gov\\.uk(/(([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})+(/([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})*)*)?(\\?([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})*)?(#([a-zA-Z0-9._~!$&'()*+,;=:@-]|%[0-9a-fA-F]{2})*)?)?$",
      "description": "A gov.uk campaign URL with optional query string and/or fragment."
    },
    "guid": {
      "type": "string",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[1-5][a-f0-9]{3}-[89ab][a-f0-9]{3}-[a-f0-9]{12}$"
    },
    "guid_list": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/guid"
      }
    },
    "publishing_app": {
      "description": "The application that owns this content item. Should be the hostname of the application creating it.",
      "type": "string",
      "enum": ["businesssupportfinder", "calculators", "calendars", "collections-publisher", "contacts", "content-tagger", "design-principles", "external-link-tracker", "feedback", "frontend", "govuk_content_api", "hmrc-manuals-api", "info-frontend", "licencefinder", "manuals-frontend", "manuals-publisher", "performanceplatform-big-screen-view", "policy-publisher", "publisher", "rummager", "service-manual-publisher", "share-sale-publisher", "short-url-manager", "smartanswers", "specialist-publisher", "spotlight", "static", "tariff", "travel-advice-publisher", "whitehall"]
    },
    "redirect_route": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "path",
        "type",
        "destination"
      ],
      "properties": {
        "path": {
          "$ref": "#/definitions/absolute_path"
        },
        "type": {
          "enum": [ "prefix", "exact" ]
        },
        "destination": {
          "type": "string",
          "oneOf": [
            { "$ref": "#/definitions/absolute_fullpath" },
            { "$ref": "#/definitions/govuk_campaign_url" }
          ]
        },
        "segments_mode": {
          "enum": [ "preserve", "ignore" ],
          "description": "For prefix redirects, preserve or ignore the rest of the fullpath. For exact, preserve or ignore the querystring."
        }
      }
    }
  }
}
